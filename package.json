{
  "name": "totheprod",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "bun run biome:lint && bunx ultracite@latest check",
    "clean": "turbo run clean",
    "ui:add": "cd apps/ui && bun add",
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:lint": "biome lint .",
    "biome:fix": "biome check --write .",
    "shadcn:add": "cd apps/ui && bunx --bun shadcn@latest add",
    "shadcn:build": "cd apps/ui && bun run registry:build",
    "ultracite:check": "bunx ultracite@latest check",
    "ultracite:fix": "bunx ultracite@latest fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "husky": "^9.1.7",
    "turbo": "^2.3.3",
    "ultracite": "6.3.2"
  },
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
