{
  "name": "totheprod",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "ui:add": "cd apps/ui && bun add",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "shadcn:add": "cd apps/ui && bunx --bun shadcn@latest add",
    "shadcn:build": "cd apps/ui && bun run registry:build"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^1.10.16"
  },
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
