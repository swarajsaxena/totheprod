[
  {
    "componentName": "TtpWavyText",
    "props": {
      "text": {
        "type": "string",
        "description": "The text to display",
        "required": true
      },
      "className": {
        "type": "string",
        "description": "Additional CSS classes to apply to the component",
        "required": false
      },
      "textClassName": {
        "type": "string",
        "description": "Additional CSS classes to apply to the text",
        "required": false
      },
      "baseDelay": {
        "type": "number",
        "description": "The base delay for the animation",
        "default": "0.05",
        "required": false
      },
      "horizontalDirection": {
        "type": "\"towards-ends\" | \"towards-center\"",
        "description": "Horizontal direction (default: towards-ends)",
        "default": "towards-ends",
        "required": false
      },
      "duration": {
        "type": "number",
        "description": "The duration of the animation",
        "default": "0.4",
        "required": false
      },
      "isHovered": {
        "type": "boolean",
        "description": "Whether the text is hovered",
        "required": false
      },
      "setIsHovered": {
        "type": "(isHovered: boolean) => void",
        "description": "Set the hover state",
        "required": false
      }
    }
  }
]
